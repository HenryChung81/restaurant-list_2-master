<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

{{!-- sort bar --}}
<div class="container">
  <div class="row mb-3 justify-content-end">
    <div class="col-md-4">
      <form action="/">
        <div class="input-group input-group-sm">
          <div class="input-group-prepend">
            <label class="input-group-text border-0 bg-white" for="sortBy">排序方式</label>
          </div>
          <select class="custom-select" name="sortBy" id="sortBy" onchange="submit()">
            <option value="asc" {{#isEqual sortBy 'asc' }}selected{{/isEqual}}>A-Z</option>
            <option value="desc" {{#isEqual sortBy 'desc' }}selected{{/isEqual}}>Z-A</option>
            <option value="category" {{#isEqual sortBy 'category' }}selected{{/isEqual}}>類別</option>
            <option value="location" {{#isEqual sortBy 'location' }}selected{{/isEqual}}>地區</option>
          </select>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurants}}
        <a href="/restaurants/{{this._id}}" class="text-secondary" style="text-decoration: none">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i>{{this.category}}
              </div>

              <span class="badge badge-pill badge-info font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>

              <a href="./restaurants/{{this._id}}/edit" style="text-decoration :none">
                <span class="badge font-weight-normal text-primary">
                  <i class="fas fa-edit"></i>
                </span>
              </a>


              <form action="/restaurants/{{this._id}}?_method=delete" method="post" style="display: inline; ">
                <span class="badge font-weight-normal">
                  <button type="submit" style="background: none; padding: 0px; border: none; cursor : pointer;"><i
                      class="fas fa-trash text-danger"></i></button>
                </span>
              </form>



            </div>
          </div>
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>